<?xml version="1.0" encoding="UTF-8"?>
<component>
  <description>
      Renders a message associated with all components on the page
  </description>

  <display-name>Message Group</display-name>

  <component-type>com.sun.rave.web.ui.MessageGroup</component-type>

<!--
  <property>
    <description>
        Flag indicating that the message text should be escaped so that it is 
        not interpreted by the browser.
      </description>
    <display-name>Escape</display-name>
    <property-name>escape</property-name>
    <property-class>boolean</property-class>
    <property-extension>
      <is-bindable>true</is-bindable>
      <default-value>false</default-value>
    </property-extension>
  </property>
-->

  <property>
    <description>
        Flag to determine whether to show the detail message. 
      </description>
    <display-name>Show Detail Message</display-name>
    <property-name>showDetail</property-name>
    <property-class>boolean</property-class>
    <property-extension>
      <default-value>false</default-value>
      <is-bindable>true</is-bindable>
    </property-extension>
  </property>

  <property>
    <description>
        Flag to determine whether to show the global message. 
      </description>
    <display-name>Show Global Messages Only</display-name>
    <property-name>showGlobalOnly</property-name>
    <property-class>boolean</property-class>
    <property-extension>
      <default-value>false</default-value>
      <is-bindable>true</is-bindable>
    </property-extension>
  </property>

  <property>
    <description>
        Flag to determine whether to show the summary message.
      </description>
    <display-name>Show Summary Message</display-name>
    <property-name>showSummary</property-name>
    <property-class>boolean</property-class>
    <property-extension>
      <default-value>true</default-value>
      <is-bindable>true</is-bindable>
    </property-extension>
  </property>

  &core-braveheart-props;
  
  &toolTip-props;
  
  &visible-props;

  <component-extension>
    <!-- <RAVE> -->
    <!-- <base-component-type>javax.faces.Output</base-component-type> -->
    <!-- </RAVE> -->
    <base-component-type>com.sun.faces.Component</base-component-type>
    <component-family>com.sun.rave.web.ui.MessageGroup</component-family>
    <renderer-type>com.sun.rave.web.ui.MessageGroup</renderer-type>
  </component-extension>

</component>
