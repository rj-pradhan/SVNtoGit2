<?xml version="1.0" encoding="UTF-8"?>
<component>
  <description>
     A radio button for a single selectable option
  </description>

  <display-name>Radio Button</display-name>

  <component-type>com.sun.rave.web.ui.RadioButton</component-type>
  <component-class>com.sun.rave.web.ui.component.RadioButton</component-class>

  <property>
    <description>
        Sets the style level for the generated label, provided the
      label attribute has been set. Valid values are 1 (largest), 2 and
      3 (smallest). The default value is 3.
      </description>
    <display-name>Label Level</display-name>
    <property-name>labelLevel</property-name>
    <property-class>int</property-class>
    <property-extension>
      <default-value>3</default-value>
      <is-bindable>true</is-bindable>
      <short-description>Set the style level for the generated label (if provided)</short-description>
    </property-extension>
  </property>

  <component-extension>
    <base-component-type>com.sun.rave.web.ui.RbCbSelector</base-component-type>
    <component-family>com.sun.rave.web.ui.RadioButton</component-family>
    <renderer-type>com.sun.rave.web.ui.RadioButton</renderer-type>
  </component-extension>

</component>
