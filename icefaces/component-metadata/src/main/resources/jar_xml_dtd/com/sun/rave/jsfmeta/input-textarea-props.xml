<!-- ========== Input+Textarea Properties ================================== -->


    <property>
      <property-name>cols</property-name>
      <property-extension>
          <category>APPEARANCE</category>
          <editor-class>
            com.sun.jsfcl.std.property.IntegerPropertyEditor
          </editor-class>
          <named-value>
            <name>minValue</name>
            <expression>new Integer(0)</expression>
          </named-value>
          <named-value>
           <name>unsetValue</name>
           <expression>new Integer(Integer.MIN_VALUE)</expression>
          </named-value>          
      </property-extension>
    </property>

    <property>
      <property-name>rows</property-name>
      <property-extension>
          <category>APPEARANCE</category>
          <editor-class>
            com.sun.jsfcl.std.property.IntegerPropertyEditor
          </editor-class>
          <named-value>
            <name>minValue</name>
            <expression>new Integer(0)</expression>
          </named-value>
          <named-value>
           <name>unsetValue</name>
           <expression>new Integer(Integer.MIN_VALUE)</expression>
          </named-value>          
      </property-extension>
    </property>

    <property>
      <property-name>value</property-name>
      <display-name>value (text)</display-name>
      <description>The text value contained and visually presented by this component</description>
    </property>
